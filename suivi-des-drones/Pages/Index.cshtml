<h1 class="text-center"> @title </h1>

<div class="row">
    <div class="col">Status : </div>
    <div class="col">
        @try
        {
            var list = PrepaListStatus();
            <select>
                @foreach (var item in list)
                {
                    <option value="@item.Id">@item.Label</option>
                }
            </select>
        }
        catch(Exception ex)
        {
         <div> 
             <b style="color: red;">le filtre des status n'est pas disponible</b>
         </div>
        }finally{
            <!--
                <b>Done</b>
            -->
        }
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Matricule</th>
            <th>Status</th>
            <th>Date de création</th>
        </tr>
        <tr>
            <th> 
                <select>
                @foreach (var item in PrepaFiltreMatricule())
                {
                    <option value=@item>@item</option>
                }
                </select>
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in PrepaListDrone())
        {
            string style = item.Status.Id switch {
                1 => "",
                -1 => "text-danger",
                _ => "text-warning"
            };

            // délégué templété
            Func<dynamic, object> BrokenTd =@<td class="@style">@item.Status.Label</td>;

            /*if (item.Status.Id == HealthStatus.Broken.Id)
            {
                style = "text-danger";
            }*/
            <tr>
                <td><a asp-page="/OneDrone" asp-route-matricule="@item.Matricule">@item.Matricule</a></td>
                <td>@item.CreationDate.ToString("dd/MM/yyyy")</td>
                @BrokenTd(@item)
            </tr>
        }
        
    </tbody>
</table>